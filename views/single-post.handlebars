<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
        <a href="/post/{{id}}">
        <div class="col-8">{{title}}</div>
        </a>
        </h2>
        <div class="col-3">Posted by {{user.username}} on {{format_date date_created}}
        </div>
        <p class ="card-body">
            {{post_content}}
        </p>
        <button id='edit-btn' class="btn btn-primary">Edit</button>
        </div>
        </div>
        <div class="col-3">
            <form id='edit-post-form' class="hide">
                <p>Edit The Post</p>
                <input type="text" id = 'post-title' name='post-title'>
                {{!-- <textarea name="post-title" id="post-title" cols="30" rows="10"></textarea> --}}
                <textarea name="post-body" id="post-body" cols="30" rows="10"></textarea>
                <button type='submit' class = 'btn btn-primary' id='changes-btn'>Accept Changes</button>
            </form>
        </div>
        <input type="hidden" name="post-id" value="{{id}}"/>
        <div class="card">
            <div class="card-header"></div>
            <form id="new-comment-form" class="card-body">
                <p id="form-label">Comment:</p>
                <textarea name="comment-body" id="comment-body" class="form-input"></textarea>
                <button type='submit' class="btn btn-primary" id='submit-btn'>Submit:</button>
            </form>
            {{>comments }}
        </div>

        <script src="/javascript/comment.js"></script>
        <script src="/javascript/delete-post.js"></script>
        <script src="/javascript/edit.js"></script>

    