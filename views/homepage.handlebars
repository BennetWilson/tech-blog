{{#each posts as |post| }}

<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            <a href="api/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>
           <p>Created by {{post.user.username}} on {{format_date post.date_created}}</p>
        </p>
    </div>
</div>
<div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>

</div>
{{/each}}